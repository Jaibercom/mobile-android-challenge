<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.test.amaro.amarotest.Views.ProductDetail.ProductDetailActivity">

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70"
        android:padding="@dimen/standard_margin"
        android:scaleType="centerInside" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorPrimary"
        android:elevation="2dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/standard_margin"
        android:paddingEnd="@dimen/standard_margin"
        android:paddingLeft="@dimen/text_margin"
        android:paddingRight="@dimen/standard_margin"
        android:paddingStart="@dimen/text_margin"
        android:paddingTop="@dimen/standard_margin">

        <TextView
            android:id="@+id/tvName"
            style="@style/TextAppearance.AppCompat.Title.Inverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:textStyle="bold"
            android:textIsSelectable="true" />

        <TextView
            android:id="@+id/tvActualPrice"
            style="@style/TextAppearance.AppCompat.Subhead.Inverse"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:fontFamily="sans-serif-medium"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvRegularPrice"
            style="@style/TextAppearance.AppCompat.Subhead.Inverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text=""
            android:fontFamily="sans-serif-light"
             />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:paddingTop="@dimen/standard_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvSize"
            android:text="@string/size_msg"
            android:textColor="@color/colorTransparentDark"
            android:layout_gravity="center_horizontal"
            style="@style/TextAppearance.AppCompat.Subhead.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.jaouan.compoundlayout.RadioLayoutGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            app:orientation="horizontal">

            <com.jaouan.compoundlayout.CircleGradientRadioLayout
                android:id="@+id/size_pp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:elevation="2dp"
                app:angle="45"
                app:colorA="@color/colorGradientA"
                app:colorB="@color/colorGradientB">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="PP"
                    android:textColor="@color/colorTransparentDark"
                    android:textSize="20sp" />
            </com.jaouan.compoundlayout.CircleGradientRadioLayout>

            <com.jaouan.compoundlayout.CircleGradientRadioLayout
                android:id="@+id/size_p"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded"
                android:elevation="2dp"
                app:colorA="@color/colorGradientA"
                app:colorB="@color/colorGradientB">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="P"
                    android:textColor="@color/colorTransparentDark"
                    android:textSize="20sp" />
            </com.jaouan.compoundlayout.CircleGradientRadioLayout>

            <com.jaouan.compoundlayout.CircleGradientRadioLayout
                android:id="@+id/size_m"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded"
                android:elevation="2dp"
                app:colorA="@color/colorGradientA"
                app:colorB="@color/colorGradientB">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="M"
                    android:textColor="@color/colorTransparentDark"
                    android:textSize="20sp" />
            </com.jaouan.compoundlayout.CircleGradientRadioLayout>

            <com.jaouan.compoundlayout.CircleGradientRadioLayout
                android:id="@+id/size_g"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded"
                android:elevation="2dp"
                app:colorA="@color/colorGradientA"
                app:colorB="@color/colorGradientB">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="G"
                    android:textColor="@color/colorTransparentDark"
                    android:textSize="20sp" />
            </com.jaouan.compoundlayout.CircleGradientRadioLayout>

            <com.jaouan.compoundlayout.CircleGradientRadioLayout
                android:id="@+id/size_gg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/rounded"
                android:elevation="2dp"
                app:colorA="@color/colorGradientA"
                app:colorB="@color/colorGradientB">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="GG"
                    android:textColor="@color/colorTransparentDark"
                    android:textSize="20sp" />
            </com.jaouan.compoundlayout.CircleGradientRadioLayout>

        </com.jaouan.compoundlayout.RadioLayoutGroup>
    </LinearLayout>

</LinearLayout>
